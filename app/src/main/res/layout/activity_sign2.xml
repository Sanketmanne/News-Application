<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignActivity2"
    android:background="@drawable/background">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44sp"
        android:gravity="center"
        android:text="SignUp"
        android:textColor="@color/black"
        android:textSize="33sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <EditText
        android:id="@+id/nameEt"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:textColorHint="@color/black"
        android:layout_marginLeft="12sp"
        android:layout_marginTop="24sp"
        android:layout_marginRight="12sp"
        android:background="@drawable/back"
        android:elevation="22sp"
        android:ems="10"
        android:hint="   Name"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:paddingLeft="22sp"
        android:textSize="24sp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305" />

    <EditText
        android:id="@+id/professionED"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="12sp"
        android:layout_marginTop="24sp"
        android:layout_marginRight="12sp"
        android:textColorHint="@color/black"
        android:background="@drawable/back"
        android:elevation="22sp"
        android:ems="10"
        android:hint="   Profession"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_baseline_work_24"
        android:inputType="textPersonName"
        android:paddingLeft="22sp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/emailED"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="12sp"
        android:layout_marginTop="24sp"
        android:layout_marginRight="12sp"
        android:textColorHint="@color/black"
        android:background="@drawable/back"
        android:elevation="22sp"
        android:ems="10"
        android:hint="   Email"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_baseline_work_24"
        android:inputType="textPersonName"
        android:paddingLeft="22sp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <EditText
        android:id="@+id/PasswordED"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="12sp"
        android:layout_marginTop="24sp"
        android:layout_marginRight="12sp"
        android:background="@drawable/back"
        android:textColorHint="@color/black"
        android:elevation="22sp"
        android:ems="10"
        android:hint="   Password"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:inputType="textPersonName"
        android:paddingLeft="22sp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.601" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signupE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22sp"
        android:background="@drawable/back"
        android:elevation="22sp"
        android:gravity="center"
        android:paddingLeft="90sp"
        android:paddingRight="90sp"
        android:text="signup"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715" />

    <TextView
        android:id="@+id/goToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160sp"
        android:layout_marginTop="9sp"
        android:text="Already Have Account? "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.782" />



</androidx.constraintlayout.widget.ConstraintLayout>